---

let { title, img, alt, eyebrow, details, url, chip } = Astro.props;

---


<div class="font-harmonia text-left rounded-lg border-neutral-50 bg-neutral-100 border-2 shadow-md hover:shadow-lg lg:w-[30%] md:w-1/3 sm:w-1/2 m-2 flex flex-col justify-between">
    <div>
        <div class="gradient-button rounded-lg shadow-inner">
            <img class="rounded-lg shadow-inner" src={ img } alt={ alt }>
        </div>
        <div class="mt-2 p-5">
            <div>
                <div class="text-xs text-neutral-600 uppercase font-bold tracking-wider">{ eyebrow }</div>
                <div class="h-2"></div>
                <div class="font-bold text-neutral-700 leading-snug">
                    <a href={ url } class="hover:underline gradient-text dark:gradient-text-dark text-xl font-bold">{ title }</a>
                </div>
                <div class="mt-2 text-sm text-neutral-600 font-harmonia-regular">{ details }</div>
            </div>
        </div>
    </div>
    <div class="flex justify-start">
        <div class="gradient-button rounded-full px-2 py-1 text-sm text-neutral-50 ml-3 mr-3 mb-5">{ <a href={ url } class="hover:underline">{ chip }</a> }</div>
    </div>
    
</div>


  
<script>
    export default {
        props: ['img', 'alt', 'eyebrow', 'title', 'details', 'url']
    }
 </script>